			<li><code>[car: |power,int|]</code></li>
			<li><code>[person: |name,string|]</code></li>
		</ul>
		
		<h4><?php echo tr('Multiplicities'); ?></h4>
		
		<h5><?php echo tr('One and only one'); ?></h5>
